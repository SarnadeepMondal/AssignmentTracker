@model IEnumerable<TestWebApplication.Models.ViewModel.UploadAssignmentViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_layoutAL_cshtml.cshtml";
}
<style>
    .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black;
    }

        .tooltip .tooltiptext {
            visibility: hidden;
            width: 120px;
            background-color: black;
            color: #fff;
            text-align: center;
            border-radius: 6px;
            padding: 5px 0;
            /* Position the tooltip */
            position: absolute;
            z-index: 1;
        }

        .tooltip:hover .tooltiptext {
            visibility: visible;
        }
</style>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Upload Assignment by Students</h3>
    </div>
    <div class="card-header">
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Student Id</th>
                        <th>AssignmentName</th>
                        <th>Assignment Description</th>
                        <th>Teachers Assignment</th>
                        <th>SubmissionDate</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr> <td colspan="5" class="text-center"> No Assignment found.</td></tr>
                    }
                    @foreach (var p in Model)
                    {

                <tr>
                    <td>@p.Id</td>
                    <td>@p.AssignmentName</td>
                    <td>@p.AssignmentDescription</td>
                    <td>
           
                        <a href="../ViewerNewTab?filename=@p.AssignmentDocName" data-toggle="Teachers Assignment" title="Click here to View the document" target="_blank">@p.AssignmentDocName </a>

                    </td>
                    <td>@p.SubmissionDate</td>
                    <th>
                        <a asp-action="StudentsSubmission" asp-route-id="@p.Id" class="btn btn-primary a-btn-slide-text">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            <span><strong>Upload your work</strong></span>
                        </a>
                    </th>
                </tr>

                    }
                </tbody>
            </table>
        </form>
                </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<!-- jQuery -->
<!-- DataTables -->
<script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<!-- page script -->
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
        });
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });</script>