@model IEnumerable<User>

@{ ViewData["Title"] = "Home Page"; }

<div class="text-center">

    <div class="container">
        <div id="piechart"></div>
    </div>
    <div class="container">
        <div class="col-12">
            <h2 class="text-left">User List </h2>
        </div>

        <div class="text-right">
            <button type="button" class="btn btn-success">+ Add New user</button>
        </div>

        <p> </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>Name</th>
                    <th>Email-Id</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <tr> <td colspan="3" class="text-center"> No data found.</td></tr>
}
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.id</td>
                        <td>@p.name</td>
                        <td>@p.email.</td>
                        <th>
                            <a asp-action="Update" asp-route-id="@p.id" class="btn btn-primary a-btn-slide-text">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                <span><strong>Edit</strong></span>
                            </a>
                            <a asp-action="Delete" asp-route-id="@p.id" class="btn btn-danger a-btn-slide-text">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                <span><strong>Delete</strong></span>
                            </a>

                        </th>
                    </tr>
}
            </tbody>

        </table>

    </div>
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
// Load google charts
google.charts.load('current', {'packages':['corechart']});
google.charts.setOnLoadCallback(drawChart);

// Draw the chart and set the chart values
function drawChart() {
  var data = google.visualization.arrayToDataTable([
  ['Task', 'Hours per Day'],
  ['Work', 8],
  ['Eat', 2],
  ['TV', 4],
  ['Gym', 2],
  ['Sleep', 8]
]);

  // Optional; add a title and set the width and height of the chart
  var options = {'title':'My Average Day', 'width':550, 'height':400};

  // Display the chart inside the <div> element with id="piechart"
  var chart = new google.visualization.PieChart(document.getElementById('piechart'));
  chart.draw(data, options);
}
</script>
