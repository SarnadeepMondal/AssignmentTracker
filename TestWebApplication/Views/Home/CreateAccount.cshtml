@{
}
<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<div class="container">
    <div class="row">
        <div class="clm-md-4 col-sm-4 col-xs-12"></div>
        <div class="clm-md-4 col-sm-4 col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-body">
                    <form method="POST" role="form">
                        <div class="form-group">
                            <h2>Sign-up as a Teacher</h2>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Your name</label>
                            <input id="signupName" asp-for="name" type="text" maxlength="50" class="form-control">
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="signupEmail">Email</label>
                            <input id="signupEmail" asp-for="email" type="email" maxlength="50" class="form-control">
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="signupPassword">Password</label>
                            <input id="signupPassword" type="password" asp-for="password" maxlength="25" class="form-control" placeholder="at least 6 characters" length="40">
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="signupPasswordagain">Confirm Password</label>
                            <input id="signupPasswordagain" type="password"  maxlength="25" class="form-control">
                            <span asp-validation-for="password" asp-for="password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button id="signupSubmit" type="submit" class="btn btn-info btn-block">Create your account</button>
                        </div>
                        <p class="form-group">By creating an account, you agree to our <a href="#">Terms of Use</a> and our <a href="#">Privacy Policy</a>.</p>
                        <hr>
                        <p></p>Already have an account? <a href="Sign">Sign in</a>
                    </form>
                </div>
            </div>
            <div class="clm-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </div>
</div>
